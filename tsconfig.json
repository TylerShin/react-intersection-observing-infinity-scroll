{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "removeComments": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
